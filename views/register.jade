extends layout.jade

block aimcss
	link(rel='stylesheet' href='/stylesheets/login.css')

block acontent
	main
		section
			form(method='post' action='/register')
				- if (error)
					h2.error= error
				label(for='username') username:
				input#username(type='username' name='username' placeholder='请输入用户名')
				span
				br
				label(for='password') password:
				input(type='password' name='password' id='password' placeholder='请输入密码')
				span
				br
				label(for='passwordAgain') password:
				input(type='password' name='passwordAgain' id='passwordAgain' placeholder='再次输入密码')
				span
				br
				label(for='mail') &nbsp;e-mail:
				input(type='email' name='mail' id='mail' placeholder='电子邮箱')
				span
				br
				label(for='phone') &nbsp;phone :
				input(type='tel' name='phone' id='phone' placeholder='电话号码')
				span
				div
					input(type='submit' id='register_login' value='register')

block indexjs
	script(src='/javascripts/register.js')